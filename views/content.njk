{% extends "layout.njk" %}

{% block head %}
    <title>Bootcamp - Conte√∫dos</title>
    <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>{{ content.description }}</h1>
    </div>
    <div class="cards">

    {% for curso in cursos %}
        <div class="card" id="{{ curso.id }}">
            <div class="card_image-container">
                <img src="{{ curso.image_url }}" alt="{{ curso.title }}" >
            </div>
            <div class="card-content">
                <p class="card-content-title">{{ curso.title }}</p>
            </div>
            <div class="card-info">
                <p>por <span class="card-info-author">{{ curso.author }}</span></p>
                <p class="card-info-time">{{ curso.duration }}</p>
            </div>
        </div>
    {% endfor %}

    </div>

    <div class="modal-overlay">
        <div class="modal">

            <div class="modal-function-button">
                <a class="action-modal">
                    <i id="maximize-minimize-modal" class="material-icons">maximize</i>
                </a>

                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
            </div>

            <div class="modal-content">
                <iframe src="https://blog.rocketseat.com.br/como-renomear-varios-arquivos-de-uma-vez-usando-o-terminal/" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="scripts.js"></script>
{% endblock %}